%div.users-container
  %h3 Users
  %div.actions
    = link_to 'Create New User', new_user_path, class: 'btn btn-info'

%table.normal-table
  %thead
    %tr
      %th #
      %th Name
      %th Email
      %th Role
      %th Actions
  %tbody
    - @users.each_with_index do |user, index|
      %tr
        %td= index + 1
        %td= link_to user.name, user, class: 'table-link'
        %td= user.email
        %td= user.role.name
        %td.actions
          = link_to 'Edit', edit_user_path(user), class: 'btn btn-success'
          - if user.disabled
            = link_to 'Enable', enable_user_path(user), data: { confirm: 'Are you sure?' }, class: 'btn btn-info'
          - else
            = link_to 'Disable', disable_user_path(user), data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

