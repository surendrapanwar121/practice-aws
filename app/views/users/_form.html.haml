- if action_text == 'Create'
  %h4 Create New User
- else
  %h4 Edit User= @user.name
  %h4 ="Edit User @user.name"

= form_for @user do |f|
  - if @user.errors.any?
    .error-messages
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .field
    = f.label :role
    = f.select :role_id, current_account.roles.pluck(:name, :id), prompt: 'Select Role'
  .actions
    = f.submit action_text
