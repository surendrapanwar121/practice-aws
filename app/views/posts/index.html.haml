%div.posts-container
  %h3 Posts
  %div.actions
    = link_to 'Create New Post', new_post_path, class: 'btn btn-info'

%table.normal-table
  %thead
    %tr
      %th #
      %th Title
      %th Status
      %th Actions
  %tbody
    - @posts.each_with_index do |post, index|
      %tr
        %td= index + 1
        %td= link_to post.title, post, class: 'table-link'
        %td= post.status
        %td.actions
          = link_to 'Edit', edit_post_path(post), class: 'btn btn-success'
          = link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
